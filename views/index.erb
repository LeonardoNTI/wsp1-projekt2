<div class="main">
  <% @todos.each_with_index do |todo, index| %>
    <% if index < 3 %> 
      <div class="card">
        <h3><%= todo[1] %></h3>
        <p><%= todo[2] %></p>
        <form action="/delete_todo" method="post">
          <input type="hidden" name="id" value="<%= todo[0] %>">
          <button type="submit">Delete</button>
        </form>
      </div>
    <% end %>
  <% end %>

  <!-- Andra raden med en ToDo och en plus-knapp -->
  <div class="card">
    <% if @todos.size > 3 %>
      <h3><%= @todos[3][1] %></h3>
      <p><%= @todos[3][2] %></p>
      <form action="/delete_todo" method="post">
        <input type="hidden" name="id" value="<%= @todos[3][0] %>">
        <button type="submit">Delete</button>
      </form>
    <% end %>
  </div>

  <!-- Plus-knappen för att lägga till fler ToDos -->
  <div class="add-todo" onclick="document.getElementById('new-todo-form').style.display = 'block';">
    <span>+</span>
  </div>

  <!-- Formulär för att lägga till nya ToDos (gömt från början) -->
  <div id="new-todo-form" style="display:none;">
    <form action="/todos" method="post">
      <label for="title">Title:</label>
      <input type="text" name="title" required>

      <label for="description">Description:</label>
      <textarea name="description" required></textarea>

      <button type="submit">Add ToDo</button>
    </form>
  </div>
</div>
